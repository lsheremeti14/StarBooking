    </div>
</header>


<script>
    $(function() {

        var w = $(window).width(),
            h = $(window).height();
        //$('section').width(w);
        $('section').height(h);
        $('menu .container').height(h - 60);
        $('body').prepend('<div id="overlay">');

        $(window).resize(function() {
            var w = $(window).width(),
                h = $(window).height();
            //$('section').width(w);
            $('section').height(h);
            $('menu .container').height(h - 60);
        });

    });
</script>